<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_order_line_tree" model="ir.ui.view">
        <field name="name">order.line.tree</field>
        <field name="model">order.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="unit_price"/>
            </tree>
        </field>
    </record>

    <record id="view_order_line_form" model="ir.ui.view">
        <field name="name">order.line.form</field>
        <field name="model">order.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                            <field name="unit_price"/>
                            <field name="currency_id"/>
                            <field name="subtotal" />
                            <field name="purchase_id"/>
                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_order_line" model="ir.actions.act_window">
        <field name="name">Order Request Form(ORF)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">order.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_products"
              name="Product"
              parent="menu_purchase_orf_root"
              action="action_order_line"/>


</odoo>